pipeline {
     agent any
       environment {
        BRANCH = "$GIT_BRANCH"
	    GIT_REPO = 'https://github.com/divyap15/jenkinsfile.git'
    }
       stages {
                   stage('TESTING1') {
                      steps {
                       script {
                          if(env.BRANCH == 'origin/master') 
                        {						  
                          sh 'echo "This is a TESTING1 stage"'
                          sh 'sleep 2'
			}
			else {
		        error("Build failed")
                             }
                     }
                  }
		 }
		       stage('TESTING2') {
                            steps {
                                 script {
				    if(env.BRANCH == 'origin/master') 
                                 {						  
                                      sh 'echo "This is a TESTING1 stage"'
                                      sh 'sleep 2'
				  }
				 else {
				error("Build failed")
                       }
                       
			  }
                        }
                }
           }     
        }
