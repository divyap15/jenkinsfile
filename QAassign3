
def boolean stage_result = true
pipeline {
 agent any 
 stages {
      stage ('building') {
	parallel {
	 stage ('stage1')
          steps{
	   catchError(buildResult: 'SUCCESS' , stageResult: 'FAILURE') {
	    echo "this is stage1"
	      sh "exit1"
	      script { stage_result = true }
	  }
	  }
	    stage ('stage2') {
	      steps { 
	         echo "this is stage2 "
	   }
	  }
	  }
	 } 
	       stage ('stage3') {
                   steps {
	            sh '''
                      #!/bin/bash
                       pwd
                        ls
                      echo "this is stage3"
	                '''
       }
      }
    }
   }

